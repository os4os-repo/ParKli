# NodeRed Schnittstellen
NODERED_IMAGE=nodered/node-red:latest             # NodeRed Image auf DockerHub
NODERED_HOSTNAME=nodered                          # Hostname von NodeRed im Docker Netzwerk
NODERED_PORT=1893                                 # Public Port
NODERED_PAGETITLE=Demo                            # Tab Title of the Editor
NODERED_HEADERTITLE=Demo                          # Editor Title 
OS4OS_DIR=/data                                   # Host-Dir to persist Data
NODERED_USER=                                     # NodeRed Editor User
NODERED_PASSWORD=				  				  # NodeRed Editor Password Hash. $ has to be escaped with $
NODERED_LOGLEVEL=info
NODERED_PROJECTS=false
NODERED_USERDIR=/data                             # Host-Dir to persist Data
NODERED_METRICS=false
NODERED_AUDIT=false
NODERED_CREDKEY=false                             # not used

